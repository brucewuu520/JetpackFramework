<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 配置Android提供的theme -->
        <item name="colorPrimary">?attr/qmui_config_color_blue</item>
        <item name="colorPrimaryDark">?attr/qmui_config_color_blue</item>
        <item name="colorAccent">?attr/qmui_config_color_blue</item>
        <item name="colorControlNormal">@color/qmui_config_color_white</item>
        <item name="textAppearanceListItem">@style/TextAppearanceListItem</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearanceListItemSmall</item>
        <item name="listPreferredItemHeight">?attr/qmui_list_item_height_higher</item>
        <item name="listPreferredItemHeightSmall">?attr/qmui_list_item_height</item>
        <item name="android:textAppearanceListItem">@style/TextAppearanceListItem</item>
        <item name="android:textAppearanceListItemSmall">@style/TextAppearanceListItemSmall</item>
        <item name="android:listPreferredItemHeight">?attr/qmui_list_item_height_higher</item>
        <item name="android:listPreferredItemHeightSmall">?attr/qmui_list_item_height</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle</item>

        <!-- 配置qmui提供的theme -->
        <!-- APP主题色-->
        <item name="qmui_config_color_blue">?attr/app_primary_color</item>
        <item name="qmui_topbar_height">48dp</item>
        <item name="qmui_content_spacing_horizontal">20dp</item>
        <item name="qmui_content_padding_horizontal">@dimen/qmui_content_spacing_horizontal</item>
        <item name="qmui_skin_support_topbar_bg">?attr/app_primary_color</item>
        <item name="qmui_skin_support_topbar_separator_color">?attr/qmui_skin_support_topbar_bg</item>
        <item name="qmui_skin_support_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_text_btn_color_state_list">@color/s_topbar_btn_color</item>
        <item name="qmui_skin_support_topbar_image_tint_color">@color/qmui_config_color_white</item>

        <item name="qmui_skin_support_tab_bg">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_tab_separator_color">?attr/qmui_skin_support_color_separator
        </item>
        <item name="qmui_skin_support_tab_normal_color">?attr/qmui_config_color_gray_6</item>
        <item name="qmui_skin_support_tab_selected_color">?attr/qmui_config_color_blue</item>

        <item name="qmui_skin_support_activity_background">?attr/app_window_background</item>
        <item name="qmui_skin_support_round_btn_border_color">@color/s_color_primary</item>
        <item name="qmui_skin_support_round_btn_text_color">@color/s_color_primary</item>

        <!-- 配置app自己的theme -->
        <!-- APP主题色-->
        <item name="app_primary_color">@color/app_primary_color</item>
        <!-- windowBackground背景色-->
        <item name="app_window_background">@color/app_window_background</item>
        <!-- 布局内容背景颜色-->
        <item name="app_content_bg_color">@color/qmui_config_color_white</item>
        <!-- app primary color disabled-->
        <item name="app_primary_color_disabled">@color/app_primary_color_disabled</item>
        <!-- app primary color pressed-->
        <item name="app_primary_color_pressed">@color/app_primary_color_pressed</item>
        <item name="app_title_text_color">?attr/qmui_config_color_gray_1</item>
    </style>

</resources>